generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider  = "postgresql"
}

model User {
  id           String    @id @default(uuid())
  username     String    @unique
  email        String    @unique
  password     String
  roles        Role[]    @default([USER])
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")
  courses_keys String[]
  devices      Device[]
  sessions     Session[]
}

model Device {
  id        String   @id @default(uuid())
  userId    String
  deviceId  String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, deviceId])
}

model Session {
  id           String   @id @default(uuid())
  userId       String
  deviceId     String
  refreshToken String
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, deviceId])
}

model Course {
  id        String   @id @default(cuid())
  title     String   @unique
  author    String
  price     Int
  image     String
  description String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  lessons   Lesson[]
}

model Lesson {
  id        String   @id @default(cuid())
  title     String
  description String
  level     String
  duration  Int
  video     String
  words     String[]
  isPublic  Boolean  @default(false)
  courseId  String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  course    Course   @relation(fields: [courseId], references: [id])
}

enum Role {
  USER
  ADMIN
}
